<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/product_image"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_toRightOf="@+id/product_image">

        <TextView
            android:maxLines="2"
            android:ellipsize="end"
            android:id="@+id/product_name"
            android:fontFamily="@font/montserrat_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/colorPrimaryDark"
            android:text=""/>

        <TextView
            android:id="@+id/product_short_description"
            android:layout_below="@id/product_name"
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:layout_height="wrap_content"
            android:textSize="11sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:text=""/>
        <TextView
            android:id="@+id/product_quantity"
            android:layout_below="@id/product_short_description"
            android:layout_width="wrap_content"
            android:fontFamily="@font/montserrat_regular"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text=""/>

        <TextView
            android:fontFamily="@font/montserrat_regular"
            android:id="@+id/discounted_price"
            android:layout_below="@id/product_quantity"
            android:layout_width="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/price"
            android:layout_toRightOf="@id/discounted_price"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_below="@id/product_quantity"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:text=""
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12sp"/>

        <Button
            android:layout_marginTop="-5dp"
            android:layout_below="@id/product_quantity"
            android:layout_alignParentEnd="true"
            android:id="@+id/add"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:layout_weight="1.0"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:textSize="13sp"
            android:background="@drawable/edit_txt_background"
            android:textColor="@color/colorPrimary"
            android:text="+ ADD"
            android:fontFamily="@font/montserrat_regular"/>
        <LinearLayout
            android:visibility="gone"
            android:layout_below="@id/product_quantity"
            android:layout_alignParentEnd="true"
            android:id="@+id/add_sub"
            android:layout_width="90dp"
            android:layout_height="27dp"
            android:textColor="@color/white"
            android:weightSum="3.0">
            <TextView
                android:id="@+id/reduce"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/montserrat_bold"
                android:text="-"
                android:background="@drawable/temp_text"
                android:gravity="center"/>
            <TextView
                android:id="@+id/quantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:layout_weight="1.0"
                android:text="1"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/edit_txt_background"/>
            <TextView
                android:textStyle="bold"
                android:id="@+id/increase"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:fontFamily="@font/montserrat_bold"
                android:background="@drawable/temp_text"
                android:textColor="@color/colorPrimary"
                android:text="+"
                android:textSize="14sp"
                android:gravity="center"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>